<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTitlebar"
    tools:context="itutorgroup.h2h.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleheight"
            android:background="@color/colorTitlebar"></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_title"
            android:padding="10dp">

            <Spinner
                android:id="@+id/sr_domain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>

            <EditText
                android:id="@+id/meetingidEditText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/sr_domain"
                android:hint="@string/hint_meeingId"
                android:inputType="numberDecimal"
                android:maxLength="11" />

            <EditText
                android:id="@+id/displayNameEditText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/meetingidEditText"
                android:hint="@string/hint_displayName"/>

            <EditText
                android:id="@+id/emailAddressEditText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/displayNameEditText"
                android:hint="@string/hint_emailAddress" />

            <Button
                android:id="@+id/joinMeetingBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/emailAddressEditText"
                android:onClick="joinMeetingClicked"
                android:text="Join Meeting" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:text="You can schedule a meeting at: http://www.liveh2h.com/h2h-meet/" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/joinMeetingBtn"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>